extends ../layouts/normal

block normal
	h1.font-weight-lighter ADMIN LOGIN

	if errors
		each error in errors
			.alert.alert-danger= error
			
	form( method="POST")
		.form-group
			label(for="email") User Name:
			input.form-control(name="username" type="username" value= values ? values.username : "")
		.form-group
			label(for="password") Password:
			input.form-control(name="password" type="password" value= values ? values.password : "")
			button.btn.btn-primary.mt-3 LOGIN